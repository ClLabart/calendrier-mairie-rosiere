{% extends 'base.html.twig' %}

{% block title %}{{ parent() }}Connexion{% endblock %}

{% block headerTitle %}{{ parent() }}Connexion{% endblock %}

{% block body %}
<form method="post" class="d-flex flex-column justify-content-center">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <h1 class="h3 mb-3 font-weight-normal text-center"><i class="fa-regular fa-user"></i> Connexion</h1>
    <div class="container">
        <div class="form-group">
            <label for="inputEmail">Email</label>
            <input placeholder="Adresse mail" type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
        </div>
        <div class="form-group">
            <label for="inputPassword">Password</label>
            <input placeholder="Mot de passe" type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
        </div>
    </div>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    <p class="text-center"><a href="{{ path("app_forgot_password_request") }}">Mot de passe oublié ? &#8594;</a></p>
    <p class="text-center"><a href="{{ path("app_register") }}">Pas de compte ? S'inscrire ici &#8594;</a></p>

    <button class="btn btn-lg btn-primary align-self-center" type="submit">
        Sign in
    </button>

    {% if app.user %}
        <p class="text-center mb-3">
            Vous êtes connectez avec le compte : {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Déconnexion</a>
        </p>
    {% endif %}
</form>
{% endblock %}
